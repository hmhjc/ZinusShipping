<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"

              android:weightSum="1">
    <RelativeLayout
        android:layout_width="400px"
        android:layout_height="wrap_content"
        android:background="@drawable/listviewtype"
        android:layout_weight="0.00">
        <TextView
            android:id="@+id/tvfqtytitle"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="@string/setContainerNoAndSealNo"
            android:layout_alignParentTop="true"
            android:paddingTop="5dp"
            android:layout_centerHorizontal="true"
            />
      <LinearLayout
          android:id="@+id/lycontainerno"
          android:layout_width="match_parent"
          android:layout_height="40dp"
          android:layout_below="@id/tvfqtytitle"
          android:layout_centerHorizontal="true"
          >
          <TextView
              android:paddingLeft="10dp"
              android:layout_width="100px"
              android:layout_height="wrap_content"
              android:text="@string/ContainerNo"/>
          <EditText
              android:id="@+id/etContainerNo"
              android:layout_width="match_parent"
              android:layout_height="40dp"
              android:singleLine="true"

              android:selectAllOnFocus="true"
              android:text="@string/ContainerNo"
              android:gravity="center"
              android:textSize="15sp"
              android:inputType="none"
              />

      </LinearLayout>

        <LinearLayout
            android:id="@+id/lyet"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/lycontainerno"
            android:layout_centerHorizontal="true"
            >
            <TextView
                android:paddingLeft="10dp"
                android:layout_width="100px"
                android:layout_height="wrap_content"
                android:text="@string/SealNo"/>
            <EditText
                android:id="@+id/etSealNo"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:singleLine="true"
                android:selectAllOnFocus="true"
                android:text="@string/SealNo"
                android:gravity="center"
                android:textSize="15sp"
                android:inputType="none"
                />

        </LinearLayout>

        <Button
            android:layout_marginBottom="5dp"
            android:id="@+id/btnfqty"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:text="@string/ok"
            android:background="@drawable/button_bg"
            android:layout_below="@id/lyet"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>
</LinearLayout>