<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

<LinearLayout style="@style/MessageMarginTopLayout"/>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="top"
    android:orientation="vertical">
    <!--add 添加条件的地方-->

    <LinearLayout
        style="@style/ll_Condition_line">

        <TextView
            android:text="@string/ShippingPlanState"
            style="@style/ConditionInputLabel"/>

        <Spinner
            android:id="@+id/sp_ShippingPlanState"
            style="@style/Condition_InputBox"/>

    </LinearLayout>

    <LinearLayout style="@style/MessageMarginTopLayout"/>

    <LinearLayout
        style="@style/ll_Condition_line">

        <TextView
            android:text="@string/PlanDataOfShipping"
            style="@style/ConditionInputLabel"/>

        <LinearLayout
            style="@style/Condition_InputBox">

            <TextView
                android:id="@+id/tvfromdate"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:gravity="center"
                android:text="2017-03-03"
                android:textColor="@color/black"
                android:textSize="@dimen/data_text"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.15"
                android:gravity="center"
                android:text="@string/To"
                android:textSize="@dimen/data_text"/>

            <TextView
                android:id="@+id/tvtodate"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:gravity="center"
                android:text="2017-03-03"
                android:textColor="@color/black"
                android:textSize="@dimen/data_text"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>

<com.micube.control.controlUtil.CustomHorizontalScrollView
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:scrollbars="horizontal">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <LinearLayout
            style="@style/GridMarginTopLayout"/>

        <!--标题(Caption)-->
        <LinearLayout
            style="@style/GridCaption">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/zinusdarkblue">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/listviewcaption"
                        android:layout_width="150px"
                        android:text="@string/ShippingPlanNo"/>

                    <LinearLayout
                        style="@style/border_bottom_style"/>

                </LinearLayout>

                <View
                    style="@style/listviewverticalsplit"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/listviewcaption"
                        android:layout_width="150px"
                        android:text="@string/SoNo"
                        />

                    <LinearLayout
                        style="@style/border_bottom_style"/>

                </LinearLayout>

                <View
                    style="@style/listviewverticalsplit"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/listviewcaption"
                        android:layout_width="150px"
                        android:text="@string/PoNo"/>

                    <LinearLayout
                        style="@style/border_bottom_style"/>

                </LinearLayout>

                <View
                    style="@style/listviewverticalsplit"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/listviewcaption"
                        android:layout_width="150px"
                        android:text="@string/Customer"/>

                    <LinearLayout
                        style="@style/border_bottom_style"/>

                </LinearLayout>

                <View
                    style="@style/listviewverticalsplit"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/listviewcaption"
                        android:layout_width="150px"
                        android:text="@string/product"/>

                    <LinearLayout
                        style="@style/border_bottom_style"/>

                </LinearLayout>

                <View
                    style="@style/listviewverticalsplit"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/listviewcaption"
                        android:layout_width="150px"
                        android:text="@string/PlanQty"/>

                    <LinearLayout
                        style="@style/border_bottom_style"/>

                </LinearLayout>

                <View
                    style="@style/listviewverticalsplit"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/listviewcaption"
                        android:layout_width="150px"
                        android:text="@string/ContainerSpec"/>

                    <LinearLayout
                        style="@style/border_bottom_style"/>

                </LinearLayout>

                <View
                    style="@style/listviewverticalsplit"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/listviewcaption"
                        android:layout_width="150px"
                        android:text="@string/PlanStartTime"/>

                    <LinearLayout
                        style="@style/border_bottom_style"/>

                </LinearLayout>

                <View
                    style="@style/listviewverticalsplit"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/listviewcaption"
                        android:layout_width="150px"
                        android:text="@string/PlanEndTime"/>

                    <LinearLayout
                        style="@style/border_bottom_style"/>

                </LinearLayout>

                <View
                    style="@style/listviewverticalsplit"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/listviewcaption"
                        android:layout_width="150px"
                        android:text="@string/State"/>

                    <LinearLayout
                        style="@style/border_bottom_style"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <ListView
            android:id="@+id/lv_ShippingPlan"
            style="@style/mainListViewStyle"/>

    </LinearLayout>

</com.micube.control.controlUtil.CustomHorizontalScrollView>

</LinearLayout>